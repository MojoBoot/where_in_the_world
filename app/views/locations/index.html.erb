<div class="col-md-12">
  <div class="table-responsive">
    <h1 style="color:#fff;"> Top Locations </h1>
    <table class="table table-hover">
      <!-- This is a table row with headers -->
      <!-- <tr>
        <th> </th>
        <th> </th>
        <th> </th>
      </tr> -->

      <%@locations.each do |location| %>
      <tr>
        <td class="col-md-4"> <%= image_tag(location.image,class: 'img-thumbnail img-reponsive') %> </td>
        <td><h3><center><%=location.city %></center></h3></td>
        <td>
          <%=link_to 'Show', location_path(location), class: 'btn btn-default' %> |
          <%= link_to 'Edit', edit_location_path(location), class: 'btn btn-success' %> |
          <%= link_to 'Delete', location, method: :delete, data: {confirm: "Confirm delete?"}, class: 'btn btn-danger' %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

<div class="well">
  <%= link_to "Add New Location", new_location_path, class: 'btn btn-lg btn-default'%>
</div>

</div>
